<h1><%= t('views.task') %></h1>
<br><br>
<%= link_to t('buttons.back'), user_tasks_path %>
<br><br>
<table>
  <tr>
    <th><%= t('attributes.title') %></th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th><%= t('attributes.description') %></th>
    <td><%= @task.description %></td>
  </tr>
  <tr>
    <th><%= t('attributes.date') %></th>
    <td><%= @task.date %></td>
  </tr>
  <tr>
    <th><%= t('attributes.status') %></th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th><%= t('attributes.assignee') %></th>
    <td><%= select_tag 'task[user_ids][]', options_from_collection_for_select(User.all, 'id', 'first_name', @task.user_ids), multiple: true %></td>
  </tr>
</table>
