<%= link_to t('back'), user_path(@user) %>
<h1><%= t('edit') %></h1>
<%= form_with model: @user do |f| %>
  <div>
    <%= f.label t('firstname') %><br>
    <%= f.text_field :firstname %><br>
  </div>
  <div>
    <%= f.label t('lastname') %><br>
    <%= f.text_field :lastname %><br>
  </div>
  <div>
    <%= f.label t('Employee') %><br>
    <%= f.text_field :employee_id %><br>
  </div>
  <div>
    <%= f.label t('date_of_birth') %><br>
    <%= f.date_field :date_of_birth %><br>
  </div>
  <div>
    <%= f.label t('joining_day') %><br>
    <%= f.date_field :joining_day %><br>
  </div>
  <div>
    <%= f.label t('Designation') %><br>
    <%= f.text_field :designation %><br>
  </div>
  <div>
    <%= f.label t('profile_picture') %><br>
    <%= f.text_field :profile_picture %><br>
  </div>
  <div>
    <%= f.label t('Email') %><br>
    <%= f.text_field :email %><br>
  </div>
  <div>
    <%= f.label t('password') %><br>
    <%= f.text_field :password %><br>
  </div>
  <div>
    <%= f.label t('password_confirmation') %><br>
    <%= f.text_field :password_confirmation %><br>
  </div>
<br>
<br>
<br>
<div> 
<%= f.submit 'edit profile' %> 
</div>
<% end %>
