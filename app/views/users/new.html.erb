<%= link_to t('buttons.back'), root_path %>
<h1><%= t('buttons.create_user') %></h1>
<%= form_with model: @user do |f| %>
  <div>
    <%= f.label t('attributes.first_name') %> 
    <% if @user.errors[:first_name].any? %>
      <span class="validation-error">
        <%= @user.errors[:first_name].join(', ') %> 
      </span>
    <% end %>
    <br>
    <%= f.text_field :first_name %><br>
  </div>
  <div>
    <%= f.label t('attributes.last_name') %> 
