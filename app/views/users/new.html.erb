<%= link_to t('buttons.back'), root_path %>
<h1><%= t('views.create_user') %></h1>
<%= form_with model: @user do |f| %>
  <div>
    <%= f.label t('attributes.firstname') %> 
    <% if @user.errors[:firstname].any? %>
      <span class="validation-error">
        <%= @user.errors[:firstname].join(', ') %> 
      </span>
    <% end %>
    <br>
    <%= f.text_field :firstname %><br>
  </div>
  <div>
    <%= f.label t('attributes.lastname') %> 
    <% if @user.errors[:lastname].any? %>
      <span class="validation-error">
        <%= @user.errors[:lastname].join(', ') %> 
      </span>
    <% end %>
