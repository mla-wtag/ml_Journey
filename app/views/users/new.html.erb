        <%= @user.errors[:email].join(', ') %> 
      </span>
    <% end %>
    <br>
    <%= f.text_field :email %><br>
  </div>
  <div>
  <%= f.label t('views.role') %>
  <br>
  <%= f.radio_button :role, 'user' %>
  <%= f.label :role_user, t('attributes.user') %>
  <br>
  <%= f.radio_button :role, 'admin' %>
  <%= f.label :role_admin, t('attributes.admin') %>
  <% if @user.errors[:role].any? %>
    <span class="validation-error">
      <%= @user.errors[:role].join(', ') %> 
    </span>
  <% end %>
  <br>
  </div>
  <div>
    <%= f.label t('attributes.password') %> 
