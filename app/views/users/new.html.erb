    <%= f.text_field :last_name %><br>
  </div>
  <div>
    <%= f.label t('attributes.employee_id') %> 
    <% if @user.errors[:employee_id].any? %>
      <span class="validation-error">
        <%= @user.errors[:employee_id].join(', ') %> 
      </span>
    <% end %>
    <br>
    <%= f.text_field :employee_id %><br>
  </div>
  <div>
