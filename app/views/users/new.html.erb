      </span>
    <% end %>
    <br>
    <%= f.text_field :email %><br>
  </div>
  <div>
  <%= f.label t('views.role') %>
  <br>
  <%= f.radio_button :role, 'user_role' %>
  <%= f.label :user_role, t('attributes.role_user') %>
  <br>
  <%= f.radio_button :role, 'admin_role' %>
  <%= f.label :admin_role, t('attributes.role_admin') %>
  <% if @user.errors[:role].any? %>
    <span class="validation-error">
      <%= @user.errors[:role].join(', ') %> 
    </span>
  <% end %>
  <br>
  </div>
  <div>
    <%= f.label t('attributes.password') %> 
